# EditorConfig is awesome: https://EditorConfig.org

# 顶级 EditorConfig 文件
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Python 文件
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# JavaScript 和 TypeScript 文件
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100
quote_type = single

# Vue 文件
[*.vue]
indent_style = space
indent_size = 2

# CSS, SCSS, SASS, Less 文件
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2
max_line_length = 100

# HTML 文件
[*.{html,htm}]
indent_style = space
indent_size = 2
max_line_length = 120

# JSON 文件
[*.json]
indent_style = space
indent_size = 2
insert_final_newline = false

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 0

# Shell 脚本
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch 文件 (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# package.json, tsconfig.json 等配置文件
[{package.json,tsconfig.json,*.config.js}]
indent_style = space
indent_size = 2

# 环境配置文件
[.env*]
insert_final_newline = false

# Docker 文件
[{Dockerfile,docker-compose.yml}]
indent_style = space
indent_size = 2

# requirements.txt
[requirements*.txt]
insert_final_newline = true
